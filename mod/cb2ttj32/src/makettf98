#! /bin/sh


##########
TTF=98ank.ttf
SRC=ank.cg
NAME="98 ANK"
JNAME="98 ANK"

./ttfstubank $TTF "$NAME" "$JNAME"

COUNT=0
NUM=256
while [ $COUNT -lt $NUM ]
do
	./98cgbmp $SRC $COUNT tmp.bmp 0
	./freeman  tmp.bmp tmp.fre
	./vector   tmp.fre tmp.vec
	./spline   tmp.vec tmp.spl
	./toglyf   tmp.spl tmp.glf
	./add      $TTF    tmp.glf
        COUNT=`expr $COUNT + 1`
done

./engpatch $TTF


##########
TTF=98gothic.ttf
SRC=kanji.cg
NAME="98 Gothic"
JNAME="98 ¥´¥·¥Ã¥¯"

./ttfstub $TTF "$NAME" "$JNAME"

COUNT=0
NUM=8836
while [ $COUNT -lt $NUM ]
do
	./98cgbmp $SRC $COUNT tmp.bmp 1
	./freeman  tmp.bmp tmp.fre
	./vector   tmp.fre tmp.vec
	./spline   tmp.vec tmp.spl
	./toglyf   tmp.spl tmp.glf
	./add      $TTF    tmp.glf
        COUNT=`expr $COUNT + 1`
done

./engpatch $TTF
