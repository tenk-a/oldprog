*proc Dit16(pbuf:d, szX:w, szY:w, rgbpal:w );cdecl
//
enter
	save pusha, es,ds
	local y:w, ddy:w

	ds = ax = %var
	y = 0
	es.di = pbuf
	loop
		ax = y
		ax &= 0x07
		ax <<= 3
		ddy = ax
		dx = es
		Std.FpToHp dx,di,ax
		es = dx
		cx = 0
		loop
			bx = cx
			bx &= 0x7
			bx |= ddy
			dh = bl = dit[bx]
			dh += dh

			bh = dl = ah = 0
			al = b[es:di]
			si = rgbpal
			si += ax
			si += ax
			si += ax
			rep.load al,si
			|al += dh
			if (cf)
				dl = 0x02
			fi
			rep.load al,si
			ax += bx
			bx = ax
			ax += ax
			ax += bx
			ah <<= 2
			dl |= ah
			rep.load al,si
			|al += dh
			if (cf)
				dl |= 0x01
			fi
			al = dl
			rep.set di,al
			++cx
		endloop (cx < szX)
		++y
		ax = y
	endloop (ax < szY)
	return
endproc


