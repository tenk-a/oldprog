proc Mono256to16sub()
//  in ds = %var
begin
	save pusha

	si = pal256ptr
	di = &mono256
	cx = 256
	dx = 0
	loop
		// dx = G * 9 + R * 5 + B * 2 --> dh
		rep.load al,si
		ah = 0
		//ax += 1	//
		dx = ax
		ax += ax
		dx += ax
		dx += ax
		rep.load al,si
		ah = 0
		dx += ax
		ax += ax
		ax += ax
		dx += ax
		dx += ax
		rep.load al,si
		ah = 0
		//if (ax > 2)	//
		//	ax -= 2		//
		//fi			//
		ax += ax
		dx += ax

		dx >>= 4
		if (dx > 255)
			dx = 255
		fi
		b[di] = dl
		++di
	endloop (--cx)
	return
endproc

*proc Mono16(pbuf:d, xx:w, yy:w, pal:w, wbuf:d, wbufSiz:w, gosFlg:w);cdecl
//	wbufSiz > xx
enter
	save pusha,es,ds
	var  cntX:w,cntY:w

	ds = ax = %var
	gosaFlg = al = gosFlg.l
	sizeX = ax = xx
	sizeY = ax = yy
	pal256ptr = ax = pal
	Mono256to16sub
	if (gosaFlg)
		gosaBuf = dx.ax = wbuf
		es.di   = dx.ax
		gosaPtr = dx.ax
		gosaPtrBgn = ax
		gosaBufSiz = cx = wbufSiz
		ax += cx
		gosaPtrEnd = ax
		rep.set di, 0, cx
		gosaX = 0
	fi
	bx.si = pbuf
	di = gosaPtr.l
	cntY = ax = yy
	loop
		es = bx
		cntX = bx = xx
		loop
			bl = b[es:si]
			bh = 0
			al = mono256[bx]
			if (gosaFlg)
				Mono16Gosa al,di	//
				b[es:si] = cl
			else
				al >>= 4
				b[es:si] = al
			fi
			++si
		endloop(--cntX)
		bx = es
		Std.FpToHp bx,si,ax
	endloop (--cntY)
	return
endproc

