@if 1
var  gosaVal:w
var  gosa:w,gosa2:w,gosa3:w,gosa5:w

@define AddGosa(ES, DI, ADR, AX)	\
	DI = ADR;						\
	if (DI >= gosaPtrEnd);			\
		DI -= gosaBufSiz;			\
	fi;								\
	w[ES:DI] += AX;					


proc GosaRB(al)
//	in  ds
//	out ax
begin
	push bx,cx,dx,si,di,es

	es.si = gosaPtr
	dl = al
	dh = 0
//Pri.Int dx
//Pri.Chr ','
//Pri.Int w[es:si]
//Pri.Chr '\t'
	dx += w[es:si]
	w[es:si] = 0
@if 0
	if (dx .>. 0xff)
		dx = 0xff
	elsif (dx .<. 0)
		dx = 0
	fi
@fi
	ax = gosaVal
	ax .>>= 1
	if (dx .<. ax)
		cx = 0
	else
		cx = 1
		dx -= gosaVal
	fi
	//jmp RetGosaRGB()
endproc //continue

proc RetGosaRGB()
begin
	//gosa
	bx = ax = dx
	dx <<= 1
	bx .>>= 5
	gosa  = bx
	ax += dx
	bx = ax
	bx .>>= 5
	gosa3 = bx
	ax += dx
	ax .>>= 5
	gosa5 = ax
	dx .>>= 5
	gosa2 = dx

// Pri.Int gosa
// Pri.Chr ','
// Pri.Int gosa2
// Pri.Chr ','
// Pri.Int gosa3
// Pri.Chr ','
// Pri.Int gosa5
// Pri.Cr

	//bx = sizeX * 6
	bx =  sizeX
	bx += bx
	bx += sizeX
	bx += bx

	ax = gosa5
	AddGosa (es, di, si   +1*6, ax)			//(x+1,y  ) += gosa*5/32
	AddGosa (es, di, si+bx    , ax)			//(x  ,y+1) += gosa*5/32
	ax = gosa3
	AddGosa (es, di, si   +2*6, ax)			//(x+2,y  ) += gosa*3/32
	AddGosa (es, di, si+bx+1*6, ax)			//(x+1,y+1) += gosa*3/32
	AddGosa (es, di, si+bx+(-1)*6, ax)		//(x-1,y+1) += gosa*3/32
	ax = gosa2
	AddGosa (es, di, si+bx+2*6, ax)			//(x+2,y+1) += gosa*2/32
	AddGosa (es, di, si+bx+(-2)*6, ax)		//(x-2,y+1) += gosa*2/32
	bx += bx
	ax = gosa3
	AddGosa (es, di, si+bx    , ax)			//(x  ,y+2) += gosa*3/32
	ax = gosa2
	AddGosa (es, di, si+bx+1*6, ax)			//(x+1,y+2) += gosa*2/32
	AddGosa (es, di, si+bx+(-1)*6, ax)		//(x-1,y+2) += gosa*2/32
	ax = gosa
	AddGosa (es, di, si+bx+2*6, ax)			//(x+2,y+2) += gosa/32
	AddGosa (es, di, si+bx+(-2)*6, ax)		//(x-2,y+2) += gosa/32

	si += 2
	if (si >= gosaPtrEnd)
		si = gosaPtrBgn
	fi
	gosaPtr.l = si

	ax = cx
	pop  bx,cx,dx,si,di,es
	ret
endproc

proc GosaG(al)
//	in  ds
//	out al
begin
	push bx,cx,dx,si,di,es

	es.si = gosaPtr
	dl = al
	dh = 0
	ax = w[es:si]
	w[es:si] = 0
	dx += ax
	if (dx .>. 0xff)
		dx = 0xff
	elsif (dx .<. 0)
		dx = 0
	fi
	cx = dx
	if (cx & 0x20)
		cx >>= 6
		++cx
		if (cx > 3)
			cx = dx
			cx >>= 6
		fi
	else
		cx >>= 6
	fi
	ax = cx
	ax <<= 6
	dx -= ax
	jmp RetGosaRGB
endproc


