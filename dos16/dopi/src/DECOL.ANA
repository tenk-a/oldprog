proc Mono16Gosa(al,di)
//	in  ds
//	out cl
//  out di
//	break bx,cx,dx
begin
	save es
	es = gosaPtr.h	//es.di = gosaPtr
	ah = 0
	dx = ax
	al = b[es:di]
	b[es:di] = 0
	ax .=. al
	dx += ax
	if (dx .>. 0xff)
		dx = 0xff
	elsif(dx .<. 0)
		dx = 0
	fi
	cx = dx
	if (cx & 0b1000)
		cx >>= 4
		++cx
		if (cx > 0x0f)
			cx = dx
			cx >>= 4
		fi
	else
		cx >>= 4
	fi
	ax = cx
	ax <<= 4
	dx -= ax
	ax = dx

	////
//	dx = gosaX
//	++dx
	ax .>>= 2
//	if (dx < sizeX)
		b[es:di+1] += al
//	fi
	bx = di
	bx += sizeX
	if (bx >= gosaPtrEnd)
		bx -= gosaBufSiz
	fi
	b[es:bx] += al

	++bx
	if (bx >= gosaPtrEnd)
		bx -= gosaBufSiz
	fi
//	if (dx < sizeX)
		b[es:bx] += al
//	fi

//	if (gosaX)
		bx = di
		bx += sizeX
		--bx
		if (bx >= gosaPtrEnd)
			bx -= gosaBufSiz
		fi
		b[es:bx] += al
//	fi
//	if (dx >= sizeX)
//		dx = 0
//	fi
//	gosaX = dx

	++di
	if (di >= gosaPtrEnd)
		di = gosaPtrBgn
	fi
	//	gosaPtr.l = di

	// ax = cx
	return
endproc

